@model IEnumerable<PodcastManagementSystem.Models.Subscription>

@{
    ViewData["Title"] = "My Subscriptions";
}

<div class="mb-4">
    <h1><i class="fas fa-bookmark"></i> My Subscriptions</h1>
    <p class="text-muted">Manage your podcast subscriptions</p>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var subscription in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">@subscription.Podcast.Title</h4>
                        <p class="card-text">@subscription.Podcast.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> Subscribed: @subscription.SubscribedDate.ToString("MMM dd, yyyy")<br />
                                <i class="fas fa-list"></i> @subscription.Podcast.Episodes.Count episodes
                            </small>
                        </p>
                        <div class="d-flex gap-2">
                            <a asp-controller="Podcasts" asp-action="Details" asp-route-id="@subscription.PodcastID" class="btn btn-primary btn-sm flex-fill">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <form asp-controller="Subscriptions" asp-action="Unsubscribe" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="podcastId" value="@subscription.PodcastID" />
                                <input type="hidden" name="returnUrl" value="@Url.Action("Index", "Subscriptions")" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Unsubscribe from this podcast?')">
                                    <i class="fas fa-times"></i> Unsubscribe
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-bookmark" style="font-size: 4rem; color: #6c757d; opacity: 0.3;"></i>
            <h3 class="mt-3">No Subscriptions Yet</h3>
            <p class="text-muted">Start exploring podcasts and subscribe to your favorites!</p>
            <a asp-controller="Podcasts" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-search"></i> Browse Podcasts
            </a>
        </div>
    </div>
}