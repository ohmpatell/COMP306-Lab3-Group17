@model PodcastManagementSystem.Models.Episode

@{
    ViewData["Title"] = "Delete Episode";
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h2><i class="fas fa-exclamation-triangle"></i> Delete Episode</h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger mb-4">Are you sure you want to delete this episode?</h3>

        <div class="alert alert-warning">
            <strong>Warning:</strong> This action cannot be undone!
        </div>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Podcast</dt>
            <dd class="col-sm-9">@Model.Podcast.Title</dd>

            <dt class="col-sm-3">Host</dt>
            <dd class="col-sm-9">@Model.Host</dd>

            <dt class="col-sm-3">Topic</dt>
            <dd class="col-sm-9">@Model.Topic</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.Duration minutes</dd>

            <dt class="col-sm-3">Views</dt>
            <dd class="col-sm-9">@Model.PlayCount</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="EpisodeID" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete This Episode
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>