@model PodcastManagementSystem.Models.Episode

@{
    ViewData["Title"] = "Edit Episode";
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-edit"></i> Edit Episode</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="EpisodeID" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PodcastID" class="form-label">Podcast</label>
                    <select asp-for="PodcastID" class="form-select" asp-items="ViewBag.Podcasts"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Host" class="form-label">Host</label>
                    <input asp-for="Host" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Topic" class="form-label">Topic</label>
                    <input asp-for="Topic" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Duration" class="form-label">Duration (minutes)</label>
                    <input asp-for="Duration" class="form-control" type="number" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Audio File (Leave empty to keep current)</label>
                    <input type="file" name="audioFile" class="form-control" accept="audio/*" />
                    @if (!string.IsNullOrEmpty(Model.AudioFileURL))
                    {
                        <small class="text-muted">Current: <a href="@Model.AudioFileURL" target="_blank">View Audio</a></small>
                    }
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Video File (Leave empty to keep current)</label>
                    <input type="file" name="videoFile" class="form-control" accept="video/*" />
                    @if (!string.IsNullOrEmpty(Model.VideoFileURL))
                    {
                        <small class="text-muted">Current: <a href="@Model.VideoFileURL" target="_blank">View Video</a></small>
                    }
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>