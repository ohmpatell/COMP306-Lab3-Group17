@model PodcastManagementSystem.Models.Podcast
@using Microsoft.AspNetCore.Identity
@using PodcastManagementSystem.Models
@using PodcastManagementSystem.Services
@inject UserManager<ApplicationUser> UserManager
@inject ISubscriptionService SubscriptionService

@{
    ViewData["Title"] = "Podcast Details";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = currentUser?.Role == UserRole.Admin;
    var canEdit = isAdmin || (currentUser != null && Model.CreatorID == currentUser.Id);
    var isSubscribed = currentUser != null && await SubscriptionService.IsSubscribedAsync(currentUser.Id, Model.PodcastID);
    var subscriberCount = await SubscriptionService.GetSubscriberCountAsync(Model.PodcastID);
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Podcasts
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h1 class="card-title">@Model.Title</h1>
                <p class="lead">@Model.Description</p>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                if (isSubscribed)
                {
                    <form asp-controller="Subscriptions" asp-action="Unsubscribe" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="podcastId" value="@Model.PodcastID" />
                        <input type="hidden" name="returnUrl" value="@Url.Action("Details", "Podcasts", new { id = Model.PodcastID })" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check"></i> Subscribed
                        </button>
                    </form>
                }
                else
                {
                    <form asp-controller="Subscriptions" asp-action="Subscribe" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="podcastId" value="@Model.PodcastID" />
                        <input type="hidden" name="returnUrl" value="@Url.Action("Details", "Podcasts", new { id = Model.PodcastID })" />
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fas fa-bookmark"></i> Subscribe
                        </button>
                    </form>
                }
            }
        </div>

        <hr />

        <div class="row">
            <div class="col-md-6">
                <p><strong><i class="fas fa-user"></i> Creator:</strong> @Model.Creator.UserName</p>
                <p><strong><i class="fas fa-calendar"></i> Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="col-md-6">
                <p><strong><i class="fas fa-list"></i> Total Episodes:</strong> @Model.Episodes.Count</p>
                <p><strong><i class="fas fa-users"></i> Subscribers:</strong> @subscriberCount</p>
            </div>
        </div>

        @if (canEdit)
        {
            <div class="d-flex gap-2 mt-3">
                <a asp-action="Edit" asp-route-id="@Model.PodcastID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit Podcast
                </a>
                <a asp-action="Delete" asp-route-id="@Model.PodcastID" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete Podcast
                </a>
            </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3><i class="fas fa-play-circle"></i> Episodes</h3>
    </div>
    <div class="card-body">
        @if (Model.Episodes.Any())
        {
            <div class="row">
                @foreach (var episode in Model.Episodes.OrderByDescending(e => e.ReleaseDate))
                {
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@episode.Title</h5>
                                <p class="card-text">
                                    <small>
                                        <i class="fas fa-user"></i> @episode.Host<br />
                                        <i class="fas fa-tag"></i> @episode.Topic<br />
                                        <i class="fas fa-clock"></i> @episode.Duration min |
                                        <i class="fas fa-eye"></i> @episode.PlayCount views
                                    </small>
                                </p>
                                <a asp-controller="Episodes" asp-action="Details" asp-route-id="@episode.EpisodeID" class="btn btn-primary btn-sm">
                                    <i class="fas fa-play"></i> Listen Now
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No episodes available yet.</p>
        }
    </div>
</div>