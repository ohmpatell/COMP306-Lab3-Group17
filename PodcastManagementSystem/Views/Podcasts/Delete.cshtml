@model PodcastManagementSystem.Models.Podcast

@{
    ViewData["Title"] = "Delete Podcast";
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h2><i class="fas fa-exclamation-triangle"></i> Delete Podcast</h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger mb-4">Are you sure you want to delete this podcast?</h3>

        <div class="alert alert-warning">
            <strong>Warning:</strong> This will also delete all @Model.Episodes.Count episode(s) in this podcast!
        </div>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Creator</dt>
            <dd class="col-sm-9">@Model.Creator.UserName</dd>

            <dt class="col-sm-3">Total Episodes</dt>
            <dd class="col-sm-9">@Model.Episodes.Count</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PodcastID" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete This Podcast
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>